<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/proveeduria?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="Modelo/Cuentacorriente.hbm.xml"/>
    <mapping resource="Modelo/Contacto.hbm.xml"/>
    <mapping resource="Modelo/Detallepresupuestos.hbm.xml"/>
    <mapping resource="Modelo/Proveedores.hbm.xml"/>
    <mapping resource="Modelo/Notadedebito.hbm.xml"/>
    <mapping resource="Modelo/Pedidos.hbm.xml"/>
    <mapping resource="Modelo/Formasdepago.hbm.xml"/>
    <mapping resource="Modelo/Presupuestos.hbm.xml"/>
    <mapping resource="Modelo/Lotes.hbm.xml"/>
    <mapping resource="Modelo/Deposito.hbm.xml"/>
    <mapping resource="Modelo/Productos.hbm.xml"/>
    <mapping resource="Modelo/VentasTienenFormasdepago.hbm.xml"/>
    <mapping resource="Modelo/Ventas.hbm.xml"/>
    <mapping resource="Modelo/Notadecredito.hbm.xml"/>
    <mapping resource="Modelo/Stock.hbm.xml"/>
    <mapping resource="Modelo/PresupuestosTienenFormasdepago.hbm.xml"/>
    <mapping resource="Modelo/Clientes.hbm.xml"/>
    <mapping resource="Modelo/Detalleventas.hbm.xml"/>
    <mapping resource="Modelo/Facturacion.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
